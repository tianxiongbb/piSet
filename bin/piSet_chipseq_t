	#		samtools markdup -r -s -@ ${CPU} ${OUTDIR}/bowtie2/${PREFIX[${SAMPLE_INDEX}]}.sort.bam ${OUTDIR}/bowtie2/${PREFIX[${SAMPLE_INDEX}]}.rmdup.bam 2> ${OUTDIR}/bowtie2/${PREFIX[${SAMPLE_INDEX}]}.rmdup.stats 
